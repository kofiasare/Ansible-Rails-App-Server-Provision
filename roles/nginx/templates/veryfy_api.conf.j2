server {
  listen 80;
  server_name  {{ server_name }};

  root /home/deploy/build/public;
  
  # serve docs
  location ^~ /docs/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
    add_header ETag "";
    break;
  }

  location / {
      proxy_pass http://localhost:4000/;
  }
}
